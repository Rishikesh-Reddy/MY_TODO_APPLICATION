<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDo Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function toggleTodo(id) {
            console.log(id)
            fetch(`/todos/${id}`, {
                method: "PUT",
                headers: {
                    "Content-Type": "application/json"
                },
            })
            .then((res) => {
                if (res.ok){
                  console.log("Hello")
                    window.location.reload();
                }
            })
            .catch((err) => {
                console.log(err);
            })
        }
      </script>
</head>
<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include('header.ejs') %> 
            <form action="/todos" method="post">
                <div class="flex gap-2 py-4">
                    <div class="flex-auto">
                        <input type="text" name="title" id="title" placeholder="What's next?" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" required>
                    </div>
                    <div class="flex-auto">
                        <input type="date" name="dueDate" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm leading-4" required />
                    </div>
                    <div class="flex-none">
                        <button type="submit" class="bg-green-600 text-white px-5 py-1 5 rounded font-medium mr-2 mb-2">Add</button>
                    </div>
                </div>
            </form>
            <div>
                <%- include('todos.ejs', {title: "Overdue", data: overDue, id: "overdue"}) %> 
                <%- include('todos.ejs', {title: "Due Today", data: dueToday, id: "due-today"}) %>
                <%- include('todos.ejs', {title: "Due Later", data: dueLater, id: "due-later"}) %>
            </div>
        </div>
    </div>
</body>
</html>